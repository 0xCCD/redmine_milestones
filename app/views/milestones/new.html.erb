<div class="contextual">
  <%= link_to_function t(:recalculate_start_date), 'recalculate_start_date()', :style=>"#{"display: none" if @milestone.fixed_start_date}", :id=>'recalculate_start_date' %>
  <%= link_to_function t(:recalculate_planned_end_date), 'recalculate_planned_end_date()', :style=>" #{"display: none" if @milestone.fixed_planned_end_date}", :id=>'recalculate_planned_end_date' %>
  <%= link_to_function t(:recalculate_actual_date), "recalculate_actual_date(#{@milestone.id})" %>
</div>

<h2><%=l(:label_milestone_new)%></h2>

<% labelled_form_for @milestone, :url => project_milestones_path(@project), :onsubmit=>"return select_assigned()" do |f| %>
    <%= render :partial => 'milestones/form', :locals => { :f => f } %>
    <%= submit_tag l(:button_create) %>
<% end %>
